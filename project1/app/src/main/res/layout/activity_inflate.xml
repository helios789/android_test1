<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:screenOrientation="landscape"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id = "@+id/main">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:text="목적지 입력"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <ImageView
            android:id = "@+id/speaker"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/speakeroff"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/MainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Tip"
            android:textSize="20dp"
            android:background="@drawable/mybutton"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:text="입력방법 탭을 선택하여 원하시는 목적지를 입력하세요"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_above = "@id/mainFrame" />
    </LinearLayout>

    <LinearLayout
        android:id = "@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id = "@+id/Btn_A"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text = "A"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize = "40dp"
                    android:background="@drawable/button_off"/>


                <Button
                    android:id = "@+id/Btn_B"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:text = "B"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize = "40dp"
                    android:background="@drawable/button_off"/>

                <Button
                    android:id = "@+id/Btn_C"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text = "C"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize = "40dp"
                    android:background="@drawable/button_off"/>

            </LinearLayout>

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/borderall">

         </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
            <Button
                android:id = "@+id/btn_exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "EXIT"
                android:textSize = "20dp"
                android:textStyle="bold"
                android:background="@drawable/mybutton"
                android:layout_marginRight="15dp"/>
           <Button
                android:id = "@+id/btn_callback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "CallBack"
                android:textSize = "20dp"
                android:textStyle="bold"
                android:background="@drawable/mybutton" />
    </LinearLayout>


</LinearLayout>